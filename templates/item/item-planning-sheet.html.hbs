<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="{{localize "HEIST.Global.Name"}}" />
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    <p>
      <label for="cost-{{this.id}}">{{localize "HEIST.PlanningItem.Cost"}}</label>
      <select name="system.cost">{{selectOptions costChoices selected=this.system.cost}}</select>
      {{localize "HEIST.PlanningItem.Credits"}}
    </p>

    {{editor enrichedDescription target="system.description" button=true editable=editable engine="prosemirror"}}
  </section>
</form>
