<div class="grid grid-5col align-center">
  <div>
    <span class="badge">
      <span>Cartes pioch√©es</span>
      <strong class="badge-value">{{length reconnaissanceHand.availableCards}}</strong>
    </span>
  </div>
  {{#each colors}}
    <div>
      <span class="badge">
        <span class="card-suit-{{@key}}">{{this.icon}}</span>
        <span>{{this.label}}</span>
        <strong class="badge-value{{#if this.isOverflowed}} overflowed{{/if}}">{{this.value}}</strong>
      </span>
    </div>
  {{/each}}
</div>

<div class="flexrow">
  <button type="button" data-draw>{{localize "HEIST.Global.DrawCards"}}</button>
</div>

<div class="grid grid-5col align-center cards-container">
  {{#each reconnaissanceHand.cards}}
    <div>
      <img src="{{this.img}}" alt="{{this.name}}" class="card" />
    </div>
  {{/each}}
</div>
