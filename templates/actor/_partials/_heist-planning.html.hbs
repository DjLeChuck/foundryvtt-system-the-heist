<div class="flexcol">
  <div>
    <div class="align-center">_Le plan</div>
    <div>
      {{editor planning.description target="system.plan" button=true editable=editable engine="prosemirror"}}
    </div>
  </div>

  <div class="align-center">_Cr√©dits</div>
  <div class="flexrow flex-group-center">
    <div>{{localize "HEIST.HeistSheet.Planning.Credit.Available"}} {{planning.credits.available}}</div>
    <div>{{localize "HEIST.HeistSheet.Planning.Credit.Used"}} {{planning.credits.used}}</div>
    <div>{{localize "HEIST.HeistSheet.Planning.Credit.Remaining"}} {{planning.credits.remaining}}</div>
  </div>

  {{#if isGM}}
    <p>
      <button type="button" data-add-planning-item>
        {{localize "HEIST.HeistSheet.Planning.AddItem"}}
      </button>
    </p>
  {{/if}}
</div>

<hr />

<div class="grid grid-3col">
  {{#each items}}
    <div>
      <div class="flexcol flex-group-center">
        <p><strong>{{this.name}}</strong></p>
        <p>
          <u>{{localize "HEIST.PlanningItem.Cost"}}</u>
          <strong>{{this.system.cost}} {{localize "HEIST.PlanningItem.Credits"}}</strong></p>
      </div>

      {{#if ../isGM}}
        <div class="flexrow">
          <button type="button" title="{{localize "HEIST.Global.Edit"}}" data-edit-item data-id="{{this._id}}">
            <i class="fa fa-pencil"></i>
          </button>
          <button type="button" title="{{localize "HEIST.Global.Delete"}}" data-remove-item data-id="{{this._id}}">
            <i class="fa fa-trash"></i>
          </button>
        </div>
      {{/if}}
    </div>
  {{/each}}
</div>
