<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <div class="flex flexcol">
      <div class="flexrow flex-group-center">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
        <div class="header-fields">
          <h1 class="charname">
            <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "HEIST.Global.Name"}}" />
          </h1>
        </div>
      </div>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="agents">{{localize "HEIST.GamemasterSheet.TheHeistAgents"}}</a>
    <a class="item" data-tab="reconnaissance">{{localize "HEIST.GamePhases.Phase3.Title"}}</a>
  </nav>

  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="agents">
      {{> "systems/heist/templates/actor/_partials/_gamemaster-agents.html.hbs"}}
    </div>
    <div class="tab" data-group="primary" data-tab="reconnaissance">
      {{> "systems/heist/templates/actor/_partials/_gamemaster-reconnaissance.html.hbs"}}
    </div>
  </section>
</form>
