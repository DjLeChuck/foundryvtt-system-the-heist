<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  <header class="sheet-header flexshrink">
    <div class="flex flexcol">
      <div class="flexrow flex-group-center">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />

        <h1>
          <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "HEIST.Global.Name"}}" />
        </h1>

        <div class="flexshrink flexrow quick-actions">
          {{#if isGM}}
            <button type="button" class="action-btn flexshrink" data-ask-agent-test
              {{# if (not canAskTest)}} disabled{{/if}} data-tooltip="{{localize "HEIST.HeistSheet.AskTest"}}">
              <i class="fa-duotone fa-cards"></i>
            </button>
          {{/if}}
          <button type="button" class="action-btn flexshrink" data-open-agent-test
                  data-tooltip="{{localize "HEIST.AgentTestWindow.DisplayWindow"}}">
            <i class="fa-duotone fa-eye"></i>
          </button>
        </div>
      </div>
    </div>
  </header>

  <nav class="sheet-tabs tabs flexshrink" data-group="primary">
    {{#if isGM}}
      <a class="item" data-tab="jokers">{{localize "HEIST.HeistSheet.Jokers.Title"}}</a>
    {{/if}}
    <a class="item" data-tab="agency">{{localize "HEIST.HeistSheet.TheAgency"}}</a>
    {{#if isGM}}
      <a class="item" data-tab="reconnaissance">{{localize "HEIST.GamePhases.Phase2.Title"}}</a>
    {{/if}}
    <a class="item" data-tab="planning">{{localize "HEIST.GamePhases.Phase3.Title"}}</a>
    <a class="item" data-tab="progression">{{localize "HEIST.GamePhases.Phase5.Title"}}</a>
  </nav>

  <section class="sheet-body">
    {{#if isGM}}
      <div class="tab" data-group="primary" data-tab="jokers">
        {{> (template "actor/_partials/_heist-jokers.html.hbs")}}
      </div>
    {{/if}}
    <div class="tab" data-group="primary" data-tab="agency">
      {{> (template "actor/_partials/_heist-agency.html.hbs")}}
    </div>
    {{#if isGM}}
      <div class="tab" data-group="primary" data-tab="reconnaissance">
        {{> (template "actor/_partials/_heist-reconnaissance.html.hbs")}}
      </div>
    {{/if}}
    <div class="tab planning" data-group="primary" data-tab="planning">
      {{> (template "actor/_partials/_heist-planning.html.hbs")}}
    </div>
    <div class="tab" data-group="primary" data-tab="progression">
      {{> (template "actor/_partials/_heist-progression.html.hbs")}}
    </div>
  </section>
</form>
